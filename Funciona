			case 'L':
				System.out.print(".-..");
				contador++;
				break;
			
			case 'M':
				System.out.print("--");
				contador++;
				break;
			
			case 'N':
				System.out.print("-.");
				contador++;
				break;
			
			case 'Ñ':
				System.out.print("--.--");
				contador++;
				break;
			
			case 'O':
				System.out.print("---");
				contador++;
				break;
		
			case 'P':
				System.out.print(".--.");
				contador++;
