			case 'F':
				System.out.print("..-.");
				contador++;
				break;
			
			case 'G':
				System.out.print("--.");
				contador++;
				break;
			
			case 'H':
				System.out.print("....");
				contador++;
				break;
		
			case 'I':
				System.out.print("..");
				contador++;
				break;
			
			case 'J':
				System.out.print(".---");
				contador++;
				break;
			
			case 'K':
				System.out.print("-.-");
				contador++;
