			case 'S':
				System.out.print("...");
				contador++;
				break;
			
			case 'T':
				System.out.print("-");
				contador++;
				break;
			
			case 'U':
				System.out.print("..-");
				contador++;
				break;
		
			case 'V':
				System.out.print("...-");
				contador++;
				break;
			
			case 'W':
				System.out.print(".--");
				contador++;
				break;
			
			case 'X':
				System.out.print("-..-");
				contador++;
				break;
			
			case 'Y':
				System.out.print("-.--");
				contador++;
				break;
			
			case 'Z':
				System.out.print("--..");
				contador++;
				break;
				
			default: 
				i=(textoesp.size()-1);
		        contador ++;
				System.out.println("ERROR EN CARACTER " + contador );
				System.out.println("Recuerda que solo puedes utilizar letras");
				break;
			
			}	
			
			}
			}
public static void modo2(ArrayList <String> textomorse, String textouser, int contador ) {
	for (int i = 0; i < textomorse.size(); i++) {		
		
		
		switch(textomorse.get(i)) {
		
		case " ":
		System.out.print(" ");
		contador++;
		break;
		
		case ".-":
		System.out.print("A");
		contador++;
		break;
		
		case "-...":
		System.out.print("B");	
		contador++;
		break;
		
		case "-.-.":
		System.out.print("C");
		contador++;
		break;

		case "-..":
			System.out.print("D");
			contador++;
			break;
		
		case ".":
			System.out.print("E");
			contador++;
			break;
		
		case "..-.":
			System.out.print("F");
			contador++;
			break;
		
		case "--.":
			System.out.print("G");
			contador++;
			break;
		
		case "....":
			System.out.print("H");
			contador++;
			break;
		
		case "..":
			System.out.print("I");	
			contador++;
			break;
	
		case ".---":
			System.out.print("J");
			contador++;
			break;
		
		case "-.-":
			System.out.print("K");
			contador++;
			break;
		
		case ".-..":
			System.out.print("L");
			contador++;
			break;
		
		case "--":
			System.out.print("M");
			contador++;
			break;
		
		case "-.":
			System.out.print("N");
			contador++;
			break;
		
		case "--.--":
			System.out.print("Ñ");
			contador++;
			break;
		
		case "---":
			System.out.print("O");
			contador++;
			break;

		case ".--.":
			System.out.print("P");
			contador++;
			break;
		
		case "--.-":
			System.out.print("Q");
			contador++;
			break;
		
		case  ".-.":	
			System.out.print("R");
			contador++;
			break;
		
		case"...":	
			System.out.print("S");
			contador++;
			break;
		
		case"-":	
			System.out.print("T");
			contador++;
			break;
	
		case "..-":	
			System.out.print("U");
			contador++;	
			break;

		case "...-":	
			System.out.print("V");
			contador++;
			break;

		case ".--":
			System.out.print("W");
			contador++;
			break;
		
		case "-..-":	
		System.out.print("X");
		contador++;
		break;
	
		case "-.--":
			System.out.print("Y");
			contador++;
			break;

		case"--..":	
			System.out.print("Z");
			contador++;
			break;
			
			default:
				i=(textomorse.size()-1);
				contador++;
				System.out.println("ERROR EN CARACTER " + contador);
				System.out.println("");
				System.out.println("Recuerda que solo puedes utilizar los símbolos (-.)");
				break;
			
			
	}
		
		
	
		}
}
}
